<div class="articles">

<table class="centab"><tr>
<th><h4>All my articles</h4></th>
<th><div class="space"></div></th>
<th><h4><%= link_to 'Write a new article', new_article_path %></h4></th>
</tr>
</table>





 
    <%# <th>Title</th> %>
    <%# <th>Text</th> %>
    <th colspan="3"></th>
  
 
  <% @articles.each do |article| %>
    
       <h1><%= article.title %>   </h1> 
            <div class="articlepreview"> <div class="articletext"><%= article.text %></div> </div> 
      
    
    
    
      <td></td>
      <td><%= link_to 'Show', article_path(article)%></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    
  <% end %>


</div>